@using GestorTareas.Shared

<div class="d-flex  gap-4">
    @*<MudIconButton Icon="@Icons.Filled.Cached" Color="Color.Primary" Size="Size.Medium" OnClick="CargarEtiquetasAsync" Disabled="@(Etiquetas is not null)" />*@
    <MudSelect T="EtiquetaDTO"
            Value="@Etiqueta"
            ValueChanged="@OnSelectItem"
            Label="@LabelContent"
            AdornmentIcon="@Icons.Material.Filled.Search"
            AnchorOrigin="Origin.BottomCenter"
            ToStringFunc="EtiquetaToString"
            Disabled="@(Etiquetas is null)"
            Clearable>

        @if (Etiquetas is not null)
        {
            @foreach (var etiqueta in Etiquetas)
            {
                <MudSelectItem Value="@etiqueta">
                    @etiqueta.Name
                </MudSelectItem>
            }
        }

    </MudSelect>
</div>