<MudCard Elevation="3" Style=@($"width: 100%; height: 100%")>
    <MudCardHeader Class="pt-2">
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Tarea.Title</MudText>
            <MudText Typo="Typo.caption">@Tarea.CreatedAt</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudCheckBox T="bool" Checked="@TareaStatus" Color="@(TareaStatus ? Color.Success : Color.Secondary)" CheckedChanged="CheckBoxChanged" Disabled="!IsModify && !IsDelete ? false : true"/>
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent Class="mt-n8 pl-2 ps-2">
        <MudDivider Light Class="mb-1" />
        <pre style="padding-top: 12px; padding-left: 12px; padding-right: 12px;">@Tarea.Content</pre>
    </MudCardContent>
    <MudCardActions Style="display: flex; justify-content: end;"> 
        @*Si estamos en la página de eliminar o modificar una tarea, mostramos un botón para realizar esas acciones.*@
        @if (IsModify)
        {
            <MudButton Variant="Variant.Text" Color="Color.Warning" OnClick="ModifyTareaAsync">Editar</MudButton>
        }

        @if (IsDelete)
        {
            <MudButton Variant="Variant.Text" Color="Color.Error" OnClick="DeleteTareaAsync"> Eliminar Tarea</MudButton>
        }
     </MudCardActions>
     
</MudCard>