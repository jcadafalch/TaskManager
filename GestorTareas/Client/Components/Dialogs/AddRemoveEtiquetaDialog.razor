@using GestorTareas.Shared
@using GestorTareas.Client.Components.Etiqueta

<MudDialog>
    <DialogContent>
        @if (Etiquetas is not null)
        {
            @foreach (var etiqueta in Etiquetas)
            {
                <MudChip Color="Color.Primary" Disabled="@Array.Exists(TareaEtiquetas, e => e.Id == etiqueta.Id)" OnClose="Submit" CloseIcon="@Icons.Filled.Add" Size="Size.Small" Tag="@etiqueta">@etiqueta.Name</MudChip>
            }
        }
    </DialogContent>

</MudDialog>