<MudDialog>
    <DialogContent>
        @if(Action == "Modify")
        {
            <MudTextField Lines="4" @bind-Value="@Contenido" Label="Contenido" Variant="Variant.Filled" />
        }
        @if(Action == "Delete")
        {
            <MudText>Esta acción <b><i>NO</i></b> se puede deshacer!</MudText>
        }
        @if(Action == "Create")
        {
            <MudTextField @bind-Value="@Titulo" Label="Titulo" Variant="Variant.Filled" />
            <MudTextField Lines="4" @bind-Value="@Contenido" Label="Contenido" Variant="Variant.Filled" />
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        @if(Action == "Modify")
        {
            <MudButton OnClick="Submit" Variant="Variant.Filled" Color="Color.Warning">Guardar Cambios</MudButton>
        }
        @if(Action == "Delete")
        {
            <MudButton OnClick="Submit" Variant="Variant.Filled" Color="Color.Error" StartIcon="@Icons.Material.Filled.DeleteForever">Eliminar!</MudButton>
        }
        @if(Action == "Create")
        {
            <MudButton OnClick="Submit" Variant="Variant.Filled" Color="Color.Primary">Crear</MudButton>
        }
    </DialogActions>
</MudDialog>