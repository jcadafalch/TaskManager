<MudDrawer @bind-Open="SideBarOpen" Elevation="1">
    <MudDrawerHeader>
        <!-- La següent linia afegeix una imatge a la part superior del menú lateral-->
        <!--<MudAvatar Color="Color.Transparent" Size="Size.Large" Image="assets/Logo-CodeMaze.png" />-->
        <MudText Typo="Typo.h5" Color="Color.Primary" Style="margin-top:10px; margin-left:15px">Gestor Tareas</MudText>
    </MudDrawerHeader>
    <MudNavMenu>
        <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Filled.Home">Home</MudNavLink>
        <!--Tareas-->
        <MudNavGroup Title="Tareas" Icon="@Icons.Filled.Task" Expanded="true">
            <MudNavLink Href="listar-tareas" Icon="@Icons.Filled.FormatListBulleted">Listar Tareas</MudNavLink>
            <MudNavLink Href="crear-tarea" Icon="@Icons.Filled.AddTask">Crear Tarea</MudNavLink> <!-- @Icons.Filled.Add-->
            <MudNavLink Href="modificar-tarea" Icon="@Icons.Filled.Create">Modificar Tarea</MudNavLink>
            <MudNavLink Href="eliminar-tarea" Icon="@Icons.Filled.Delete" IconColor="Color.Error">Eliminar Tarea</MudNavLink>
        </MudNavGroup>

        <!--Etiquetas-->
        <MudNavGroup Title="Etiquetas" Icon="@Icons.Filled.Label" Expanded="true">
            <MudNavLink Href="listar-etiquetas" Icon="@Icons.Filled.Label">Listar Etiquetas</MudNavLink>
            <MudNavLink Href="crear-etiqueta" Icon="@Icons.Filled.NewLabel">Crear Etiquetas</MudNavLink> <!-- @Icons.Filled.Add-->
            <MudNavLink Href="modificar-etiqueta" Icon="@Icons.Filled.Create">Modificar Etiqueta</MudNavLink>
            <MudNavLink Href="eliminar-etiqueta" Icon="@Icons.Filled.LabelOff" IconColor="Color.Error">Eliminar Etiqueta</MudNavLink>
        </MudNavGroup>
    </MudNavMenu>
</MudDrawer>

@code{
    [Parameter]
    public bool SideBarOpen { get; set; }
}