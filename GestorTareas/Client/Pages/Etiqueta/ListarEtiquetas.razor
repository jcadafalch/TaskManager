@page "/listar-etiquetas"
@using GestorTareas.Client.Components.Etiqueta

<MudText Align="Align.Center" Typo="Typo.h4" Color="Color.Primary" Class="pb-6">
    Listar Etiqueta
</MudText>

@if (Etiquetas is null)
{
    <MudText Typo="Typo.body1">
        Cargando...
    </MudText>
}
else
{
    @if (Etiquetas.Any())
    {
        <MudGrid Spacing="5" Justify="Justify.Center">
            @foreach (var etiqueta in Etiquetas)
            {
                <MudItem>
                    <MudChip Color="Color.Surface" Size="Size.Large">@etiqueta.Name</MudChip>
                </MudItem>
            }
        </MudGrid>

    }
    else
    {
        <MudText Typo="Typo.body1">
            No se han encontrado etiquetas
        </MudText>
    }
}