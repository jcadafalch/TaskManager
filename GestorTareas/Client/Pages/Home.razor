@using GestorTareas.Client.Components.Tarea
<MudText Align="Align.Center" Typo="Typo.h4" Color="Color.Primary">
    Gestor Tareas
</MudText>

<MudButton Class="mt-3 mb-4" Variant="Variant.Filled" Color="Color.Primary" OnClick="@CreateTarea">Crear Tarea</MudButton>

@if (tareas is null)
{
    <MudText Typo="Typo.body1">
        Cargando...
    </MudText>
}
else
{
    @if (tareas.Any())
    {
        <MudGrid Spacing="3" Justify="Justify.Center">
            @foreach (var tarea in tareas)
            {
                <MudItem xs="12" md="4" xl="3">
                    <TareaComponent All="true" Modify="false" Delete="false" Etiquetas="etiquetas" Tarea="tarea" TareaStatus="tarea.IsCompleted" OnStatusChanged=@(async x => await UpdateTareasCompleted(x, tarea.Id)) OnTareaChanged="@(async x => await UpdatePage(x))" />
                </MudItem>
            }
        </MudGrid>
    }
    else
    {
        <MudText Typo="Typo.body1">
            No se han encontrado tareas
        </MudText>
    }
}