@page "/modificar-tarea"
@using GestorTareas.Client.Components.Tarea

<MudText Align="Align.Center" Typo="Typo.h4" Color="Color.Primary" Class="pb-6">
    Modificar Tarea
</MudText>

@if (Tareas is null)
{
    <MudText Typo="Typo.body1">
        Cargando...
    </MudText>
}
else
{
    @if(Tareas.Any())
    {
        <MudGrid Spacing="5" Justify="Justify.Center">
            @foreach(var tarea in Tareas)
            {
                <MudItem><TareaComponent Tarea="tarea" IsDelete="false" IsModify="true" UpdatePage="UpdatePage" /></MudItem>
            }
        </MudGrid>
    }
    else
    {
        <MudText Typo="Typo.body1">
            No se han encontrado tareas
        </MudText>
    }
}