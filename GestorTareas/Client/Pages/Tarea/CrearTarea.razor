@page "/crear-tarea"

<MudText Align="Align.Center" Typo="Typo.h4" Color="Color.Primary">
    Crear Tarea
</MudText>

<EditForm Model="@model" OnValidSubmit="OnValidSubmit">
    <!--<DataAnnotationsValidator/>-->
    <MudGrid>
        <MudItem Class="mx-auto pa-6">
            <MudCard>
                <MudCardContent>
                    <!-- -->
                    <MudTextField Label="Titulo de la tarea" @bind-Value="model.Title" For="@(() => model.Title)" />
                    <MudTextField Label="Contenido de la tarea" @bind-Value="model.Content" For="@(() => model.Content)" />
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" OnClick="@(async () => await CreateNewTareaAsync())">Crear Tarea</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</EditForm>
